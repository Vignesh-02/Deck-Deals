<%- include("partials/header");-%>

<section class="max-w-md mx-auto px-4 sm:px-6 py-12 sm:py-16">
  <div class="rounded-3xl border border-slate-800 bg-slate-900/60 p-6 sm:p-8 shadow-2xl shadow-black/20">
    <div class="mb-8 text-center sm:text-left">
      <h1 class="text-2xl sm:text-3xl font-semibold text-slate-50 tracking-tight">Log in</h1>
      <p class="mt-2 text-slate-400">Welcome back to Presto.</p>
    </div>

    <form action="/login" method="POST" class="space-y-5">
      <div>
        <label for="username" class="block text-sm font-medium text-slate-300 mb-1.5">Username</label>
        <input id="username" name="username" type="text" required placeholder="Enter your username"
          class="w-full rounded-xl border border-slate-700 bg-slate-800/80 px-4 py-3 text-slate-100 placeholder:text-slate-500 focus:border-primary-500 focus:ring-2 focus:ring-primary-500/30 outline-none transition" />
      </div>
      <div>
        <label for="password" class="block text-sm font-medium text-slate-300 mb-1.5">Password</label>
        <input id="password" name="password" type="password" required placeholder="Enter your password"
          class="w-full rounded-xl border border-slate-700 bg-slate-800/80 px-4 py-3 text-slate-100 placeholder:text-slate-500 focus:border-primary-500 focus:ring-2 focus:ring-primary-500/30 outline-none transition" />
      </div>
      <button type="submit"
        class="w-full rounded-xl bg-gradient-to-r from-primary-500 to-primary-600 py-3.5 text-base font-semibold text-white shadow-lg shadow-primary-500/25 hover:shadow-primary-500/40 hover:from-primary-600 hover:to-primary-700 transition-all">
        Log in
      </button>
    </form>

    <p class="mt-6 text-center text-slate-400 text-sm">
      Donâ€™t have an account?
      <a href="/register" class="font-medium text-primary-400 hover:text-primary-300 transition-colors">Sign up</a>
    </p>
  </div>
</section>

<%- include("partials/footer");-%>
